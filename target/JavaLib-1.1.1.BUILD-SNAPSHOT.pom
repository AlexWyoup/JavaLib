    <properties>
        <!-- 工程源码编码 -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- 工程导出编码 -->
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <!-- 工程JDK版本 -->
        <java.version>1.8</java.version>
        <!-- 工程修订版本 -->
        <revision>1.1.1.BUILD-SNAPSHOT</revision>
        <!-- junit版本 -->
        <junit.version>4.12</junit.version>
        <!-- servlet版本 -->
        <servlet.api.version>4.0.1</servlet.api.version>
        <!-- lombok版本 -->
        <lombok.version>1.18.2</lombok.version>
        <!-- aspectj版本 -->
        <aspectj.version>1.9.1</aspectj.version>
        <!-- slf4j版本 -->
        <slf4j.version>1.7.25</slf4j.version>
        <!-- spring版本 -->
        <spring.version>5.1.4.RELEASE</spring.version>
        <!-- fastjson版本 -->
        <fastjson.version>1.2.56</fastjson.version>
        <!-- jackson版本 -->
        <jackson.annotations.version>2.9.8</jackson.annotations.version>
        <!-- okhttp3版本 -->
        <okhttp.version>3.12.1</okhttp.version>
        <!-- quartz版本 -->
        <quartz.version>2.3.0</quartz.version>
        <!-- Spring Boot版本 -->
        <spring-boot-quartz.version>2.1.4.RELEASE</spring-boot-quartz.version>
    </properties>

